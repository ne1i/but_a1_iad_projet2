{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (Windows)",
      "type": "cppvsdbg",
      "program": "${workspaceFolder}/app.exe",
      "request": "launch",
      "console": "externalTerminal",
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "Build (MSVC)"
    },
    {
      "name": "Debug (Linux)",
      "type": "cppdbg",
      "program": "${workspaceFolder}/app.out",
      "request": "launch",
      "externalConsole": false,
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "Build (GCC)"
    }
  ]
}
