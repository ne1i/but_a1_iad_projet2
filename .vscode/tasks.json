{
  "tasks": [
    {
      "type": "process",
      "label": "Build (GCC)",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "command": "gcc",
      "args": [
        "-g",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/src/app.out"
      ],
      "problemMatcher": ["$gcc"]
    },
    {
      "type": "process",
      "label": "Build (MSVC)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "cl",
      "args": [
        "/W4",
        "/analyze",
        "/TC",
        "/Zi",
        "/Od",
        "/nologo",
        "/Fe${workspaceFolder}/src/app.exe",
        "${workspaceFolder}/src/app.c"
      ],
      "problemMatcher": ["$msCompile"]
    }
  ],
  "version": "2.0.0"
}
