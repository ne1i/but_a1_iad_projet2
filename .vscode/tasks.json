{
  "tasks": [
    {
      "type": "process",
      "label": "Build (GCC)",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "command": "gcc",
      "args": [
        "-g",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/src/app.out"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "type": "process",
      "label": "Build (MSVC)",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "command": "cl",
      "args": [
        "/analyze",
        "/TC",
        "/Zi",
        "/Od",
        "/nologo",
        "/Fe${workspaceFolder}\\src\\app.exe",
        "${workspaceFolder}\\src\\*.c"
      ],
      "problemMatcher": [
        "$msCompile"
      ]
    }
  ],
  "version": "2.0.0"
}